{{#partial "content"}}

    <!------------->
    <div class=" sightings">
    <form action="/posts/sightings/new" method="post">
        <div class="form-group">
            <input type="text" class="form-control col-sm-7 " id="Location" placeholder="Location">
        </div>
        <div class="form-group">
            <input type="text" class="form-control col-sm-7" id="rangername" name="rangername" placeholder="RangerName">
        </div>
        <div class="form-group">
            <select type="text" class="form-control col-sm-7" id="animalid" name="animalid">
                {{#each animals}}
                    <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select>
        </div>
        <div class="form-group">
        <p class="link">Add a new animal?<a href="/posts/animals/new">Click Here</a></p>
            <br>
            <button type="submit" class="btn btn-secondary btn-lg btn-block col-sm-7">sight</button>
        </div>
    </form>
    </div>


{{/partial}}

{{> layout.hbs}}